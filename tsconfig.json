{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals":true
  },
  "include": ["types/*.d.ts", "src/**/*.tsx", "src/**/*.ts"]
}